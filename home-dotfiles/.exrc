" display line numbers on the left
set number
" display current mode (insert/normal)
set showmode
" show matching parens, braces, etc
set showmatch
" display row/column info
set ruler
" autoindent width = 4 spaces
set shiftwidth=4
" tab width = 4 spaces
set tabstop=4
" expand tabs into spaces (remember to `:set noexpandtab` if file is a Makefile) 
set expandtab
" display all error messages
set verbose
" enable horizontal scrolling
"set leftright
" use extended regular expressions
set extended
" case-insensitive search, unless an uppercase letter is used
set iclower
" incremental search
set searchincr
" print helpful messages (eg, 4 lines yanked)
set report=1
